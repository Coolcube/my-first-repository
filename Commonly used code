swiper框架的使用

var mySwiper = new Swiper( '.swiper1', {
    pagination: '.pagination1',
	loop: true,
	autoplay: 5000,
	slidesPerView:4,
	spaceBetween: 0,
	paginationClickable: true,
} )

$( '.arrow-left1' ).on( 'click', function( e )
{
	e.preventDefault()
	mySwiper.swipePrev()
} )

$( '.arrow-right1' ).on( 'click', function( e )
{
	e.preventDefault()
	mySwiper.swipeNext()
} )

