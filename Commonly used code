	$("body").css("opacity",1);
	
	var h = $(window).height();
	$(".banner").css("height",h-70);
	$(".bannerheight").css("height",h-70);

})


$(window).resize(function(){
	var sh = $(window).height();
	$(".banner").css("height",sh-70);
	$(".bannerheight").css("height",sh-70);
	
})




